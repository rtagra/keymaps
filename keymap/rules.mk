EXTRAKEY_ENABLE = yes       # Audio control and System control
CONSOLE_ENABLE = no         # Console for debug
COMMAND_ENABLE = no         # Commands for debug and configuration
NKRO_ENABLE = yes           # N-Key Rollover
BACKLIGHT_ENABLE = no       # Enable keyboard backlight functionality
RGBLIGHT_ENABLE = no        # Enable keyboard RGB underglow
AUDIO_ENABLE = no           # Audio output
ENCODER_ENABLE = no         # Rotary encoder support
AUTO_SHIFT_ENABLE = no      # Auto Shift
COMBO_ENABLE = no           # Key combo feature
SPACE_CADET_ENABLE = no     # Space Cadet Shift
GRAVE_ESC_ENABLE = yes      # Grave Escape
MAGIC_ENABLE = yes          # Magic keycodes
KEY_LOCK_ENABLE = no        # Key lock
UNICODE_ENABLE = no         # Unicode
SWAP_HANDS_ENABLE = no      # Swap hands

